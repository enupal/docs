// Craft Theme override.styl

.sidebar {
  background: $sidebarColor;
}

.page {
  dl {
    display: flex;
    flex-flow: row wrap;
    padding: 1.25rem 1.5rem;
    line-height: 1.7;
    background: $blockColor;
    border-radius: 6px;

    dt, dd {
      margin: 0.25rem 0 0;
      word-wrap: break-word;
    }

    dt {
      width: 9rem;
      padding-right: 1rem;
      box-sizing: border-box;
      display: flex;
      align-items: top;
      justify-content: flex-end;
      font-weight: bold;
    }

    dd {
      width: calc(100% - 9rem);
    }
  }

  tr:nth-child(2n) {
    background-color $blockColor
  }

  code {
    background toRgba($blockColor)
  }

  pre, pre[class*="language-"] {
    white-space: pre;
  }

  .highlighted-line {
    background-color darken($blockColor, 5%)
  }

  .code-toggle {
    margin: 0.85rem 0;

    ul.code-language-switcher {
      border-radius: 6px 6px 0 0;
    }

    div[class*="language-"] {
      border-radius: 0 0 6px 6px;

      &:before {
        display: none;
      }
    }

    & > div > div[class*="language-"] {
      & > pre,
      & > pre[class*="language-"] {
        margin: 0;
      }
    }
  }

  a.outbound-link {
    color: lighten($textColor, 25%);
    margin-right: 0.25rem;
  }

  a + svg.outbound {
    margin-left: 0.25rem;
    position: relative;
    top: 2px;
  }

  .custom-block {
    div[class*="language-"] {
      background: none;
      border-radius: 0;
      margin-left: -24px;
      margin-right: -24px;

      .highlight-lines {
        padding-top: 0;
      }

      pre,
      pre[class*="language-"] {
        padding-top: 0;
        padding-bottom: 0;
      }
    }
  }
}

ul.code-language-switcher {
  height: $navbarHeight;
  box-sizing: border-box;
  display: flex;
  flex-direction: row;
  margin: 0;
  padding: 0.7rem 1.5rem;
  font-size: 15px;
  line-height: 1.4;
  z-index: 2;
  background: lighten(#282c34, 10%);

  li {
    margin: 0 5px 0 0;
    padding: 0;
    list-style-type: none;

    a {
      display: block;
      padding: 0 0.625rem;
      line-height: 2.2rem;
      cursor: pointer;
      border-radius: 4px;
      color: lighten($codeHeading, 30%)

      &:hover {
        text-decoration: none !important;

        &:not(.active) {
          background: rgba(255,255,255,0.1)
        }
      }

      &.active {
        color: darken($codeHeading, 40%)
        cursor default
        background-color #fff
      }
    }
  }
}

.theme-container.split {
  .page {
    & > ul.code-language-switcher {
      position: fixed;
      top: $navbarHeight;
      padding: 0.7rem 2.5rem;
    }
  }
}

@media (min-width: $MQNarrow + 1) {
  .theme-container.split {
    .page {
      position: relative;
      width: "calc(50% - %s)" % ($sidebarWidth / 2);

      &:after {
        display: block;
        position: fixed;
        top: 0;
        right: 0;
        bottom: 0;
        width: "calc(50% - %s)" % ($sidebarWidth / 2);
        background: $blockColor;
        content: '.';
        font-size: 0;
      }

      & > ul.code-language-switcher {
        right: 0;
        width: "calc(50% - %s)" % ($sidebarWidth / 2);
      }

      .page {
        margin-right: 0;

        .split {
          margin: 0 -2.5rem;
          width: calc(200% + 10rem);
          display: flex;
          flex-direction: row;

          & > div {
            z-index: 1;
            width: 50%;
            padding-left: 2.5rem;
            padding-right: 2.5rem;
            box-sizing: border-box;

            &.right {
              pre,
              pre[class*="language-"] {
                margin-left: -2.5rem;
                margin-right: -2.5rem;
                padding: 0 2.5rem;
                white-space: pre-wrap;
                background-color: transparent;

                &:before {
                  display: none;
                }

                .highlighted-line {
                  margin: 0 -2.5rem;
                  padding: 0 2.5rem;
                }
              }
            }
          }
        }
      }
    }
  }
}

// narrow desktop / iPad
@media (max-width: $MQNarrow) {
  .theme-container.split {
    .page {
      & > ul.code-language-switcher {
        padding-left: 2rem;
        padding-right: 2rem;
        width: "calc(100% - %s)" % ($sidebarWidth * 0.82);
      }

      .page {
        & > *:first-child {
          margin-top: $navbarHeight * 2;
        }

        & > h1, & > h2, & > h3, & > h4, & > h5, & > h6 {
          &:first-child {
            padding-top: 0;
          }
        }
      }

      pre, pre[class*="language-"] {
        margin: 1em 0;
        border-radius: 6px;
      }

      h1, h2, h3, h4, h5, h6 {
        margin-top: (0.5rem - $navbarHeight - $navbarHeight);
        padding-top: ($navbarHeight + $navbarHeight + 1rem);
      }
    }
  }
}

// wide mobile
@media (max-width: $MQMobile) {
  .theme-container.split {
    .page {
      & > ul.code-language-switcher {
        width: 100%;
      }
    }
  }
}

// narrow mobile
@media (max-width: $MQMobileNarrow) {
  .theme-container.split {
    .page {
      & > ul.code-language-switcher {
        padding-left: 1.5rem;
        padding-right: 1.5rem;
      }
    }
  }
}

div.table {
  margin: 1rem 0;
  border: 1px solid #dfe2e5;
  overflow-x: auto;

  table {
    display: table;
    margin: 0;
    border: none;
    width: 100%;

    thead,
    tbody:first-child {
      tr:first-child {
        &, th, td {
          border-top: none;
        }
      }
    }

    tbody tr:last-child {
      th, td {
        border-bottom: none;
      }
    }

    th, td {
      &:first-child {
        border-left: none;
      }

      &:last-child {
        border-right: none;
      }
    }
  }
}

